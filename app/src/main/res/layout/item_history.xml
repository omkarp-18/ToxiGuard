        <!-- item_history.xml -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                android:textStyle="bold"
                android:textColor="@color/toxic_red"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvDetectedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detected message..."
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvOverallScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall: 0.72"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>

            <!-- New container for per-category bars -->
            <LinearLayout
                android:id="@+id/layoutCategoryScores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>
