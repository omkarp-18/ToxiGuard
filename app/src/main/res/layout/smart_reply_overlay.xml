<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_overlay_card"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This reply may escalate things. Choose a calmer tone:"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:padding="4dp" />

    <Button
        android:id="@+id/btnCalm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calm Reply"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnNeutral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neutral Reply"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnLogical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logical Reply"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
