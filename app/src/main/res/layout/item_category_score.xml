<!-- res/layout/item_category_score.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="4dp">

    <TextView
        android:id="@+id/tvCategoryLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Insult"
        android:textSize="13sp"
        android:textColor="@color/bg_tile_color" />

    <ProgressBar
        android:id="@+id/progressCategory"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_weight="2"
        android:max="100"
        android:progress="50"
        android:progressTint="@color/toxic_low"
        android:indeterminate="false"
        android:background="@drawable/bg_progress_track"
        android:layout_marginHorizontal="8dp"/>

    <TextView
        android:id="@+id/tvCategoryPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="52%"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"/>
</LinearLayout>
